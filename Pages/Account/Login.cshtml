@page
@model SupermarketWEB.Pages.Account.LoginModel
@{
}
<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control"
               asp-for="User.Email"
               id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        <div>
            <span class="text-danger" asp-validation-for="User.Email"></span>
        </div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control"
               asp-for="User.Password"
               id="exampleInputPassword1">
        <div>
            <span class="text-danger" asp-validation-for="User.Password"></span>
        </div>

    </div>

    <div class="mb-3">
        <label asp-for="User.Role"></label>
        <select asp-for="User.Role" class="form-control">
         <option value="">Seleccione un rol</option>
        <option value="admin">Administrador</option>
        <option value="user">Usuario</option>        
         </select>
        <span asp-validation-for="User.Role"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
